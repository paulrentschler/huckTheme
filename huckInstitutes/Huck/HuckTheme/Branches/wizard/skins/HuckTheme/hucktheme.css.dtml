/* ---- GENERAL ---- */

body {
  background-color: black;
}

body #portal-columns {
  background-color: white;
}

img.no-photo {
  border: 0 !important;
}




/* ----- SEARCH BOXES and SEARCH RESULTS ----- */
#portal-searchbox {
	margin: 1em 0.25em;
  text-align: right;
}

#portal-advanced-search {
  display: inline;
  color: #AAA;
  margin-left: 1em;
}

#portal-advanced-search a:link, 
#portal-advanced-search a:active,
#portal-advanced-search a:visited { 
	color: #AAA;
	padding: 0.1em 0.3em;
	text-decoration: underline;
}

#portal-advanced-search a:hover {
  background-color: #AAA; 
	color: black;
	text-decoration: none;
}




/* ----- LOGOS AND WORDMARKS --- */
#psu-logo { 
	border: 0;
  left: 0px;
	margin: 0;
	padding: 0;
  position: absolute;
	top: 0px;
}

#logos {
  clear: both;
	height: 160px;
  margin: 0;
  padding: 0;
}

#logos #section-logo {
	background-color: white;
	float: right;
	height: 150px;
	margin: 0 20px 2px 2px;
	padding: 4px;
	width: 470px;
}

#logos #section-logo img {
  border: 0;
}

#logos #portal-logo {
	display: block;
	margin-right: 500px;
	padding-top: 60px;
}

#logos #portal-logo img {
	border: 0;
	display: block;
	margin: 0 auto;
}




/* ---- GLOBAL NAVIGATION ---- */
#portal-globalnav {  
  float: right;
	margin: 0 17px 0 0;
	padding: 3px 0 0 0;
	white-space: normal;
	width: 480px;
}

#portal-globalnav li {
  border: 0 none;
	margin: 0;
	padding: 0;
	text-align: center;
}

#portal-globalnav li a { 
	background-color: #336699;
	border-top: 2px solid #336699;
  border-right: 0 none;
  border-bottom: 0 none;
  border-left: 0 none;
	color: white;
  display: block;
  float: left;
	font-size: 10px;
  height: 40px; 
	margin: 0;
	padding: 5px 2px;
	text-transform: capitalize;
	vertical-align: bottom;
	width: 64px;
}

#portal-globalnav li a:hover {
	background-color: #0099FF;
	border-top: 2px solid #0099FF;
  border-right: 0 none;
  border-bottom: 0 none;
  border-left: 0 none;
	color: white;
} 

#portal-globalnav li.selected a {
	background-color: white;
	border-top: 2px solid #FF6633;
  border-right: 0 none;
  border-bottom: 0 none;
  border-left: 0 none;
	color: black;
}







/* ---- FOOTER ---- */
#portal-footer {
  background-color: black;
	border: none;
	color: #AAA;
	float: none;
	font-weight: normal;
	line-height: 1.2em;
	margin: 2em 0em 1em 0em;
	padding: 0.5em 0em 1em 2em;
	text-align: left;
}

#portal-footer {
  float: left;
}

#siteActions {
  float: right;
	margin: 2em 0 1em 0;
  padding: 0.5em 2em 1em 0;
  text-align: right;
}

#partnerLogo {
  clear: both;
  margin-bottom: 2em;
  text-align: center;
}


#portal-footer p {
  margin: 0.25em 0;
}

#portal-footer acronym {
  color: white;
}

#portal-footer a,
#portal-footer a:link,
#portal-footer a:visited {
	background-color: black;
	border: none;
	color: #AAA;
	text-decoration: underline;
}

#portal-footer a:hover {
  background-color: #AAA;
  color: black;
}

#portal-siteactions {
  background-color: black;
  border: none;
  color: #AAA;
  margin: 0;
  padding: 0;
  text-align: right;
}

#portal-siteactions li {
  display: block;
  margin: 0.25em 0;
}

#portal-siteactions li a,
#portal-siteactions li a:link,
#portal-siteactions li a:visited {
	background-color: black;
	border: none;
	color: #AAA;
	text-decoration: underline;
	text-transform: none;
}

#portal-siteactions li a:hover {
  background-color: #AAA;
  color: black;
}

	


/* ---- FOOTER PORTLETS ---- */

#footer-portlets {
  margin: 1em 0 0 0;
}

#footer-portlets dl.portlet {
  background-color: black;
  border: none;
}

#footer-portlets .FooterPortletA,
#footer-portlets .FooterPortletB,
#footer-portlets .FooterPortletC,
#footer-portlets .FooterPortletD,
#footer-portlets .FooterPortletE {
  float: left;
  width: 20%;
}

#footer-portlets .FooterPortletF {
  display: none;
  visiblity: hidden;
}

#footer-portlets .portletHeader {
  background-color: black;
  text-transform: uppercase;
}

#footer-portlets .FooterPortletA .portletHeader a { background-color: #0099FF;  color; #FFFFFF; }
#footer-portlets .FooterPortletB .portletHeader a { background-color: #66CC33;  color; #FFFFFF; }
#footer-portlets .FooterPortletC .portletHeader a { background-color: #FF6633;  color; #FFFFFF; }
#footer-portlets .FooterPortletD .portletHeader a { background-color: #FF6633;  color; #FFFFFF; }
#footer-portlets .FooterPortletE .portletHeader a { background-color: #336699;  color; #FFFFFF; }

#footer-portlets .portletHeader a,
#footer-portlets .portletHeader a:link,
#footer-portlets .portletHeader a:visited {
  color: white;
  padding: 0.2em 0.5em;
  text-decoration: none;
}

#footer-portlets .portletHeader a:hover {
  background-color: #AAA;
  color: black;
}


#footer-portlets .portletItem {
  padding: 0 0.5em 0.5em 1.5em;
}

#footer-portlets .portletItem a,
#footer-portlets .portletItem a:link,
#footer-portlets .portletItem a:visited,
#footer-portlets .portletItem a.state-published,
#footer-portlets .portletItem a.state-published:link,
#footer-portlets .portletItem a.state-published:visited {
  background-color: black;
  border: none;
  color: #AAA !important;
  font-size: 0.88em;
  margin: 0 1em 0 0;
  padding: 0.5em 0.2em;
  text-decoration: none;
}

#footer-portlets dl.portletCollection dd {
  line-height: 1em;
  margin: 0;
  padding: 0 0.5em 0 1.5em;
}

#footer-portlets dl.portletCollection .even {
  background-color: black;
  border: 0;
}

#footer-portlets dl.portlet dd.portletItem a.tile:hover,
#footer-portlets dl.portlet dd.portletItem ul li a:hover {
  background-color: #AAA !important;
  color: black !important;
}

#footer-portlets .portletItem a.state-private {
  display: none !important;
  visibility: hidden !important;
}






/**** ------------------------------------ NOT VETTED BEYOND HERE ------------------------------------ ****/ 








/* ----- BREADCRUMBS (over-rides public.css) ----- */
#portal-breadcrumbs a {
	color: &dtml-linkColor;;
	text-decoration: underline;
}

#portal-breadcrumbs {
	color: #666666;
	background-color: &dtml-backgroundColor;; 
	border-bottom: 1px solid #ccc;
	border-left: 1px solid #ccc;
	float: left;
	margin: 0 0.5em;
	padding: 0.25em 1em;
}

.section-home #portal-breadcrumbs { /* hide the breadcrumbs on the home page */
	display:none;
}



/* -----  PERSONAL BAR ----- */
#portal-personaltools	{
	background-color: transparent;
	border: none;
}



  

/* ----- IMAGES ----- */
.plain img {
	border: none;
	margin: 0.25em 0.5em;
}



/* ----- GENERAL CONTENT (overrides public.css and base.css) ----- */
.apply {
	text-transform: uppercase;
}

.contactInfo {
	color: #666;
	font-size: 93%;
}

p.contactInfo {
	padding-left: 1.5em;
}

.documentContent p a,
.documentContent dd a,
.documentContent li a {
	border-bottom: none;
	text-decoration: underline;
}

.documentContent p a:visited 
.documentContent dd a:visited,
.documentContent li a:visited {
	color: &dtml-linkVisitedColor;;
}

.documentContent p a:active, .documentContent p a:hover,
.documentContent dd a:active, .documentContent dd a:hover,
.documentContent li a:active, .documentContent li a:hover {
	color: &dtml-linkActiveColor;;
}

.emphasis {
	font-weight: bold;
	text-transform: uppercase;
}

.formHelp {
	font-size: 100%;
}

fieldset {
	margin: 1em 0 1em 0.25em;
}

h1 {
	border-bottom: 1px solid &dtml-colorTwo;;
	font-size: 170%;
	font-weight: bold;
}

h2 {
	border-bottom: none;
	font-size: 150%;
	font-weight: bold;
	margin-bottom: 0.5em;
	margin-top: 1em;
}

h3 {
	border: none;
	font-size: 110%;
	font-weight: bold;
	margin-top: 0.75em;
}

h2 a, h3 a, h4 a, h5 a, h6 a {
	color: &dtml-linkColor; !important;
	text-decoration: underline;
}

.tileHeadline a {
	text-decoration: underline;
}

h2 a:hover, h3 a:hover, h4 a:hover, h5 a:hover, h6 a:hover {
	color: &dtml-linkActiveColor; !important;
	text-decoration: underline;
}

h2 a:visited, h3 a:visited, h4 a:visited, h5 a:visited, h6 a:visited {
	color: &dtml-linkVisitedColor; !important;
	text-decoration: underline;
}

.hide {
	display: none;
}

input {
	border: 1px solid #ccc;
}

.itemTitle {
	font-weight: bold;
	text-transform: uppercase;
}

.link-external {
	background: transparent;
	padding: 0
}

table.listing {
	font-size: 100%;
}

table.listing th, table.data th {
  background-color: #B6D8EA;
	text-align: left;
}

table.listing th img {
	display: none;
}

table.listing a:hover {
	color: &dtml-linkActiveColor;;
}

table.listing a {
	text-decoration: underline;
}

#maincontents {
	float: left;
	width: 70%;
}

.moreInfo {
	font-size: 93%;
}

#nicheOne, #nicheTwo, #nicheThree { /* see also portal-column-content rules for section-home (below) */
	float: left;
	margin: 1% 3% 1% 0%;
	width: 30%;
}

.specialtyColumn {
	width: 50%;
}

table tr {
	vertical-align: top;
}

table.plain {
	border-collapse: collapse;
}

table.plain th {
	border: 1px solid #666;
	padding: 0.25em 0.5em;
	text-align: left;
}

table.plain td {
	border: 1px solid #666;
	padding: 0.25em 0.5em;
}

.data {
  border-bottom: 1px solid #B6D8EA;
  border-collapse: collapse;
  border-left: 1px solid #B6D8EA;
  font-size: 100%;
  margin: 1em 0;
}

.data th {
  border-right: 1px solid #DEE7EC;
  font-weight: normal;
  padding: 0.25em 1em;
}

.data td {
  border-bottom: 1px solid #B6D8EA;
  border-right: 1px solid #B6D8EA;
  padding: 0.25em 1em;
}

ul.list {
	list-style-type: none;
	list-style-image: none;
}

.documentActions {
  margin-top: 3em;
}

table.gradProgs tbody tr td {
  width: 50%;
}



/* --- PORTLETS --- */

.portlet {
	border-bottom: none;
	font-size: 100%;
}

.portletItem {
	border: none;
	margin: 0;
	padding: 0.5em;
}

.portletHeader {
	background-color: &dtml-colorZero;;
	border: none;
	color: #fff;
	padding: 0.25em 1em;
	text-transform: none;
}
	
.portletHeader a:link, .portletHeader a:visited { 
	color: #fff;
	display: block;
	text-decoration: underline;
}

.portletAssignments .portletHeader a:link, .portletAssignments .portletHeader a:visited { 
	color: #00f;
	display: block;
	text-decoration: underline;
}

.section-welcome .portletsAboveContentA,
.section-welcome .portletsAboveContentB,
.section-welcome .portletsAboveContentC {
  float: left;
  padding: 0.5em;
  width: 32%;
}

.section-welcome .portletsAboveContentA .portlet-static-about-us dt.portletHeader { background-color: &dtml-colorOne;; }
.section-welcome .portletsAboveContentB dt.portletHeader { background-color: &dtml-colorTwo;; }
.section-welcome .portletsAboveContentC dt.portletHeader { background-color: &dtml-highlightColor;; }

.portlet .eventTitle a, .portlet .articleTitle a {
  font-size: 120%;
  font-variant: small-caps;
  font-weight: bold;
}

.portlet .eventTitle .speakerInstitution {
  font-style: italic;
  font-variant: normal;
  font-weight: normal;
}

.portlet .eventDate {
  font-weight: bold;
}

.portlet .imageInPortlet {
  border: medium none;
  float: right;
  margin: 0.25em 0.5em;
}



/* --- COLORS --- */

/* -- Color 1 (blue) headers, footers, backgrounds and icons -- */
#typeOnePortlet .portletHeader {
	background: &dtml-colorOne;;
	color: #fff;
}

/* -- Color 2 (green) headers, footers, backgrounds and icons -- */
#typeTwoPortlet .portletHeader {
	background: &dtml-colorTwo;;
	color: #fff;
}

/* -- Color 3 (orange) headers, footers, backgrounds and icons -- */	
#typeThreePortlet .portletHeader,
#subspecialtyList .portletHeader {
	background: &dtml-highlightColor;;
	color: #fff;
}



/* --- NAVIGATION PORTLET --- */
.navTreeItem a, dd.portletItem .navTreeItem a {
	margin: 0.5em 0.2em;
}

.navTreeItem a:hover, 
dd.portletItem .navTreeItem a:hover {
	border: &dtml-borderWidth; &dtml-borderStyle; &dtml-globalBackgroundColor;; /* needed to avoid jiggle on hover */
	color: &dtml-highlightColor;;
	text-decoration: underline;
}

dd.portletItem .navTreeCurrentItem { 
	border-bottom: none !important; 
	border-left: 2px &dtml-borderStyle; &dtml-highlightColor; !important; 
	border-right: none !important; 
	border-top: none !important; 
	color: &dtml-highlightColor;;
	padding-left: 0.35em;
	text-decoration: none;
}



/* ----- CONTENT WELL PORTLETS ----- */

.portletsBelowContentA {
  float: left;
  width: 55%;
}

.portletsBelowContentB {
  border-left: 1px solid #DEE7EC;
  float: right;
  padding: 0.2em 0.2em 0.2em 1em;
  width: 40%;
}



/* ----- EVENTS ----- */

.vevent .speakerInstitution {
	font-size: 80% !important;
	font-style: italic !important;
}

table.eventTable td {
  padding: 12px;
}

table.eventTable td.eventDate {
	font-weight: bold;
	text-transform: uppercase;
  min-width: 8em;
}

table.eventTable td .eventTitle {
  font-size: 120%;
}

table.eventTable td .eventTitle .speakerInstitution {
  font-size: 100%;
  font-style: italic;
}

table.eventTable td .talktitle {
	font-weight: bold;
}

table.eventTable td .eventCanceled {
  background-color: #336699;
  color: white;
  padding: 2px;
}

.eventDetails {
  background-color: #336699;
  border: 1px solid #336699;
  padding: 0px 1px 1px 2px;
}

.eventDetails .eventDetailsLabel {
  color: white;
  margin: 1px 5px;
}
  
.eventDetails table {
  margin: 0;
  padding: 0;
}

.eventDetails table th {
  background-color: white;
  color: &dtml-discreetColor;;
  width: 6em;
}

.eventDetails table td {
  color: black;
  width: 16em;
}

#meetTheSpeaker {
  background-color: #DEE7EC;
  margin-top: 2em;
  padding: 1px 10px;
}



/* --- FACILITIES --- */
.facility-location-image {
	float: right;
	font-size: 0.9em;
	width: 200px;
}

.facility-location-image img {
	display: block;
}



/* --- PEOPLE --- */
.facultyStaffDirectory .standardView ul.jobTitle li {
  font-style: italic;
}

.facultyStaffDirectory .tabularView th.classification {
  font-size: 100%;
}

.facultyStaffDirectory .tabularView ul.jobTitle li {
  font-size: 93%;
  line-height: 1.1em;
  list-style-image: none;
  list-style-type: none;
  margin: 0.5em 0 0 1.5em;
}

.facultyStaffDirectory .tabularView table.noBorders {
  border: 0;
  border-collapse: collapse;
}

.facultyStaffDirectory .tabularView table.noBorders th,
.facultyStaffDirectory .tabularView table.noBorders td {
  border: 0;
  padding: 8px 3px;
}

.hasPhoneNumber {
	background:transparent url(phone_icon.gif) no-repeat scroll left bottom;
	padding-left:10px;
}



/* ----- HOLIDAY - OFFICE CLOSED NOTICE ----- */
.vacation_msg {
  background-color: #ffcccc;
  border: 1px solid #FF6633;
  color: black;
  padding: 1em;

	display: none;
	visiblity: hidden;
}


