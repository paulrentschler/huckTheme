
<tal:comment tal:replace="nothing">
Modified by Catherine Williams
Only show the path bar for pages other than home and the pages generated off a template (e.g. search results, contact-info, accessibility-info, sitemap etc)
</tal:comment>

<tal:notOnHome tal:define="whatsHere view/breadcrumbs" tal:condition="python:len(whatsHere)>0">

	<div id="portal-breadcrumbs" 
		 i18n:domain="plone">
	
		<span id="breadcrumbs-you-are-here" i18n:translate="you_are_here">You
	are here:</span>
		<a i18n:translate="tabs_home" class="crumbHome" tal:attributes="href view/navigation_root_url">Home</a>
		<span tal:condition="view/breadcrumbs" class="breadcrumbSeparator earlySeparator">
			<tal:ltr condition="not: view/is_rtl">&rarr;</tal:ltr>
			<tal:rtl condition="view/is_rtl">&raquo;</tal:rtl>
		</span>
		<span tal:repeat="crumb view/breadcrumbs"
			  tal:attributes="dir python:view.is_rtl and 'rtl' or 'ltr'">
			<tal:last tal:define="is_last repeat/crumb/end">
				<a href="#"
				   tal:omit-tag="not: crumb/absolute_url"
				   tal:condition="python:not is_last"
				   tal:attributes="href crumb/absolute_url"
				   tal:content="crumb/Title">
					crumb
				</a>
				<span class="breadcrumbSeparator" tal:condition="not: is_last">
					<tal:ltr condition="not: view/is_rtl">&rarr;</tal:ltr>
					<tal:rtl condition="view/is_rtl">&raquo;</tal:rtl>
				</span>
				<span tal:condition="is_last"
					  tal:content="crumb/Title">crumb</span>
			 </tal:last>
		</span>
	
	</div>

</tal:notOnHome>